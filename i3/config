#off pc
bindsym --release $mod+Shift+BackSpace mode "$mode_system"
set $Locker sleep 0.1
bindcode $mod+Shift+ $s exec ~/.config/i3/off/lock+sleep.sh
set $mode_system (s) suspend, (r) reboot, (q) shutdown, (e) exit
mode "$mode_system" {
bindcode $s exec --no-startup-id $Locker && exec ~/.config/i3/off/lock+sleep.sh, mode "default"
bindcode $r exec systemctl reboot, mode "default"
bindcode $q exec systemctl poweroff -i, mode "default"
bindcode $e exec --no-startup-id i3-msg exit, mode "default"

#back to normal
bindsym Return mode "default"
bindsym Escape mode "default"
}
